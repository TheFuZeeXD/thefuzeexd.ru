{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false,
        "checkJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ]
}
